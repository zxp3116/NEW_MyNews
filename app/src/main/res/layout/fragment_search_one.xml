<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Search.Search_One.Search_ONE">
    <RelativeLayout
        android:id="@+id/relativeLayout_Search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar_Headline">


        <com.github.hymanme.tagflowlayout.TagFlowLayout
            android:id="@+id/tagFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:expandHint="查看更多"
            app:foldHint="點擊縮回"/>
        <TextView
            android:id="@+id/text_Recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagFlowLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="最近搜尋"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/image_Recording_Clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/round_delete_24"
            android:layout_below="@+id/tagFlowLayout"
            android:layout_above="@+id/listView_Recording"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
        <ListView
            android:id="@+id/listView_Recording"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_Recording"
            android:divider="@null"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar_Search_ONE"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_Search_ONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="努力加載中，請稍後..."
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/progressBar_Search_ONE"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView_Search_ONE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFFFF"
        android:divider="@null"
        android:visibility="gone"/>

</RelativeLayout>