<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.News.Ｈeadline_Three.Headline_THREE">

    <ProgressBar
        android:id="@+id/progressBar_Headline_THREE"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_Headline_THREE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="努力加載中，請稍後..."
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/progressBar_Headline_THREE"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:visibility="gone"/>
    <ListView

        android:id="@+id/listView_Headline_THREE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFFFFF"
        android:divider="@null"
        android:visibility="gone"/>

</RelativeLayout>